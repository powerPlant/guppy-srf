Bootstrap: docker
From: centos:7

%labels
Maintainer eric.burgueno@plantandfood.co.nz
Version 3.4.4

%files
  ## You must download the RPM from the Nanopore Tech Community portal
  ont-guppy-3.4.4-1.el7.x86_64.rpm /tmp

%post
  ## Install from dependencies
  yum -y install epel-release
  yum -y install hdf5 libaec libgfortran libquadmath libsodium openpgm zeromq

  ## Force install ignoring the dependency on libcuda.so.1 (will be present at runtime)
  rpm -ivh --nodeps /tmp/ont-guppy-3.4.4-1.el7.x86_64.rpm

%runscript
if [ $# -eq 0 ]; then
  /bin/echo -e "This Singularity image cannot provide a single entrypoint. Please use \"$SINGULARITY_NAME <cmd>\" or \"singularity exec $SINGULARITY_NAME <cmd>\", where <cmd> is one of the following:\n"
  exec ls /usr/bin/guppy*
else
  exec "$@"
fi
